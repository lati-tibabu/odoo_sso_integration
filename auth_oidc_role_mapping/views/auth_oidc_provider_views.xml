<odoo>
    <record id="view_auth_oauth_provider_form_inherit_roles" model="ir.ui.view">
        <field name="name">auth.oauth.provider.form.add_roles</field>
        <field name="model">auth.oauth.provider</field>
        <field name="inherit_id" ref="auth_oauth.view_oauth_provider_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <group string="OIDC Role Mapping">
                    <field name="oidc_role_claim"/>
                    <field name="oidc_role_mapping_ids" widget="one2many">
                        <list editable="bottom">
                            <field name="role"/>
                            <field name="group_id"/>
                        </list>
                    </field>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
 
